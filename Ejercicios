

    #include <iostream>

    int main()
    {
        // Declaración de variables
        double costoHora, horasTrabajadas, totalDevengado;

        // Solicitar datos al usuario
        std::cout << "Ingrese el costo por hora trabajada: ";
        std::cin >> costoHora;

        std::cout << "Ingrese la cantidad de horas trabajadas: ";
        std::cin >> horasTrabajadas;

        // Calcular el salario semanal
        totalDevengado = costoHora * horasTrabajadas;

        // Mostrar el resultado
        std::cout << "\nEl salario semanal del trabajador es: L. " << totalDevengado << std::endl;

        // Pausa para que no se cierre la consola automáticamente
        std::cout << "\nPresione ENTER para salir...";
        std::cin.ignore();
        std::cin.get();

        return 0;
    }
    
